# LLM configuration
LLM_MODEL=gpt-4o
OPENAI_API_KEY=your_openai_api_key_here

# Server configuration
PORT=8000
HOST=0.0.0.0
DEBUG=False

# Database configuration
DATABASE_URL=sqlite:///hotel_bookings.db

# CORS configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging configuration
LOG_LEVEL=INFO

# Privacy and consent configuration
DATA_RETENTION_DAYS=30
ANONYMIZE_DATA=True

# API keys for external services
CAB_BOOKING_API_KEY=your_cab_booking_api_key_here
ENTERTAINMENT_API_KEY=your_entertainment_api_key_here

# Feature flags
ENABLE_WELLNESS_FEATURES=True
ENABLE_ENTERTAINMENT_FEATURES=True
ENABLE_CAB_BOOKING=True